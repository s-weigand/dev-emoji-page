{
  "name": "dev-emojis",
  "private": true,
  "version": "1.0.0",
  "description": "My helper app with dev icons",
  "config": {
    "gh_handle": "s-weigand"
  },
  "pwaManifest": {
    "name": "Dev Emojis PWA",
    "shortName": "Dev Emojis",
    "startURL": ".",
    "theme": "#424242",
    "generateIconOptions": {
      "baseIcon": "src/assets/icon.png",
      "sizes": [
        144,
        192,
        384,
        512
      ],
      "genFavicons": true,
      "purpose": [
        "maskable",
        "any"
      ],
      "development": {
        "disabled": true
      },
      "production": {
        "startURL": "https://$npm_package_config_gh_handle.github.io/dev-emoji-page/index.html",
        "scope": "https://$npm_package_config_gh_handle.github.io/dev-emoji-page/"
      }
    }
  },
  "scripts": {
    "dev": "run-p parcel:dev build:sw-dev",
    "parcel:dev": "GH_HANDEL=$npm_package_config_gh_handle parcel src/index2.html",
    "eslint": "eslint . --ext .ts,.tsx --fix",
    "build": "run-s clean parcel:prod build:sw-prod move-index2",
    "parcel:prod": "GH_HANDEL=$npm_package_config_gh_handle parcel build src/index2.html --dist-dir deploy --no-source-maps",
    "parcel:gh-pages": "GH_HANDEL=$npm_package_config_gh_handle parcel build src/index2.html --dist-dir deploy --no-source-maps --public-url https://$npm_package_config_gh_handle.github.io/dev-emoji-page",
    "build:sw-dev": "workbox generateSW workbox-configs/dev.js --watch",
    "build:sw-prod": "workbox generateSW workbox-configs/prod.js",
    "gh-pages": "run-s clean parcel:gh-pages post_process:gh-pages build:sw-prod",
    "move-index2": "mv deploy/index2.html deploy/index.html",
    "post_process:gh-pages": "python utils/post_build.py fix-all",
    "clean": "run-s clean:del clean:mkdir",
    "clean:mkdir": "mkdir dist deploy",
    "clean:del": "rimraf dist deploy .parcel-cache"
  },
  "author": "Sebastian Weigand",
  "license": "Apache-2.0",
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.0.0-beta.3.1",
    "@parcel/transformer-sass": "^2.0.0-beta.3.1",
    "@types/react": "^17.0.7",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.7.0",
    "parcel-config-pwa-manifest": "^0.0.9",
    "parcel-reporter-static-files-copy": "^1.3.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4",
    "workbox-cli": "^6.1.5"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
